!!!
%html
	%head

		/Info
		= meta_tags

		/Styling
		:sass
			html 
				height: 100%
				background: #fff repeat-x bottom
			
			body 
				font-family: Helvetica, Arial, Sans-Serif
				font-size: 14px
			

			.error_container 
				display: block
				margin: auto
				margin: 10% auto 0 auto
				width: 40%
			
			.error_container .error 
				display: block 
				text-align: center
			
			.error_container .error img 
				display: block
				margin: 0 auto 15px auto
			
			.error_container .message > * 
				display: block
			
			.error_container .message strong 
				font-weight: bold
				color: #f00
			
			.error_container .contact_info 
				display: block
				text-align: center
				margin: 25px 0 0 0
			
			.error_container .contact_info a 
				display: inline-block
				margin: 0
				opacity: 0.4
				transition: opacity 0.15s ease
			
			.error_container .contact_info a:hover 
				opacity: 0.8
			

	/Body
	%body
		.error_container
			= yield
			= image_tag "custom_error_pages/bg.png"